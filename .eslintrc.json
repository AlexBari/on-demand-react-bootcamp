{
  "plugins": [
    "react",
    "prettier"
  ],
  "extends": [
    "react-app",
    "airbnb",
    "prettier",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "endOfLine": "auto",
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": true,
        "useTabs": false,
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "printWidth": 80
      },
      { "usePrettierrc": false }
    ],
    "react/require-default-props": "off",
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "no-bitwise": [
      "error",
      {
        "int32Hint": true
      }
    ],
    "import/no-unresolved": "off",
    "no-console": "off"
  }
}